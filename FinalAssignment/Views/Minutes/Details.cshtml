@model MinuteViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Minute</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinuteType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinuteType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @{
                var sb = new StringBuilder();
                foreach (var employee in Model.Employee)
                {
                    sb.Append($"{employee.Name}, ");
                }
            }
            @sb.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalStatus)
        </dt>
        @if (Model.ApprovalStatus)
        {
            <dd class="col-sm-10">Approved</dd>
        }
        else
        {
            <dd class="col-sm-10">Not Approved</dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalHistory)
        </dt>
        @if (Model.ApprovalHistory)
        {
            <dd class="col-sm-10">Approved</dd>
        }
        else
        {
            <dd class="col-sm-10">Not Approved</dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crews)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crews.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
